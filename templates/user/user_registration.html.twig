{% extends 'base.html.twig' %}

    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" href="{{ asset('css/user.css') }}">
    {% endblock %}

    {% block title %}SnowTricks - Créer un trick{% endblock %}

    {% block content %}

        <div class="page-wrapper">

            <div id="signin" class="content col-lg-5 col-md-8 mx-auto my-auto">

                <h1 class="text-center">Inscription</h1>

                {{ form_start(form) }}
                    {{ form_row(form.username) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.password) }}

                    <fieldset class="form-group">
                        <label>Photo</label>
                        <ul class="images">
                            <li class="subForm col-sm-12">
                                {{ form_row(form.imageFileName) }}
                            </li>
                        </ul>
                    </fieldset>

                    <button type="submit" class="btn btn-success" formnovalidate>
                        <i class="fas fa-download"></i> Créer le compte
                    </button>
                {{ form_end(form) }}

                <p class="text-center"><a href="{{ path('app_login') }}">Vous possédez déjà un compte ?</a></p>

            </div>

        </div>

    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/user.js') }}"></script>
    {% endblock %}