{% if moreTricks is defined %}
    {% for moreTrick in moreTricks %}
        <div class="col">
            <div class="card">
                <a href="">
                    <img src="{{ moreTrick.mainImage.path }}" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title float-left">
                            {{ moreTrick.name }}
                        </h5>
                        <div class="float-right">
                            <a href="#" class="a-card-pencil"><i class="fas fa-pencil-alt"></i></a>
                            <a href="#" class="a-card-trash" onclick="return confirm(`Êtes-vous sûr de vouloir supprimer le trick : {{moreTrick.name}} ?`)"><i class="fas fa-trash-alt"></i></a>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    {% endfor %}
{% endif %}

